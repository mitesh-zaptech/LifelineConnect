<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativepart1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/commentbox_1_shadow_right" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/layoutright"
            android:layout_toRightOf="@+id/img" >

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="30dp" >

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="From "
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/name_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/name1"
                    android:textColor="#fff"
                    android:textSize="21sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1"
                android:textColor="#fff"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/stamp" >

                <TextView
                    android:id="@+id/length1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Length: "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/length1"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/length"
                    android:background="@drawable/email_icon"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutright"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" >

            <ImageView
                android:id="@+id/btnArrowUpDownDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_up_down_" />

            <ImageView
                android:id="@+id/btndelete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/btnArrowUpDownDisplay"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/btndelete_white" />

            <RelativeLayout
                android:id="@+id/layoutplus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp" >

                <Button
                    android:id="@+id/btnplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/minus"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgStar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/layoutright"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/layoutright"
            android:background="@drawable/star"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgnew"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/new_" />

    

</RelativeLayout>